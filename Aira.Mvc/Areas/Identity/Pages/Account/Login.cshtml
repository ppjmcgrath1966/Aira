@page
@model LoginModel

@{
    ViewBag.Title = "Sign In";
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="ladylip" data-sidebar-size="lg">
<head>
    @await Html.PartialAsync("~/Views/Shared/_title_meta.cshtml")
    @await Html.PartialAsync("~/Views/Shared/_head_css.cshtml")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>

    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="@Url.Action("Index", "Dashboard")" class="d-inline-block auth-logo">
                                    <img src="~/assets/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-semibold">@Localizer.GetLocalizedString("APPLICATION_TITLE")</p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">

                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">@Localizer.GetLocalizedString("WELCOME_BACK")</h5>
                                    <p class="text-muted">@Localizer.GetLocalizedString("SIGN_IN_CONTINUE")</p>
                                </div>
                                <div class="p-2 mt-4">
                                    <form id="account" method="post">

                                        <div class="mb-3">
                                            <label asp-for="Input.Email" class="form-label"></label>
                                            <input asp-for="Input.Email" class="form-control" id="username">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <div class="float-end">
                                                <a href="#" class="text-muted">@Localizer.GetLocalizedString("FORGOT_PASSWORD")</a>
                                            </div>
                                            <label class="form-label" asp-for="Input.Password"></label>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input asp-for="Input.Password" class="form-control pe-5 password-input" id="password-input">
                                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                                            <label class="form-check-label" for="auth-remember-check">@Localizer.GetLocalizedString("REMEMBER_ME")</label>
                                        </div>

                                        <div class="mt-4">
                                            <button class="btn btn-success w-100" type="submit">@Localizer.GetLocalizedString("SIGN_IN")</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->
                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> AIRA.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    @await Html.PartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml")

</body>
</html>